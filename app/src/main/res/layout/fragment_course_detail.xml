<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD">

    <!-- Header / Top Bar -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/text_title"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/text_title"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom_actions"
        app:layout_constraintTop_toBottomOf="@id/btn_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Title Section -->
            <TextView
                android:id="@+id/tv_course_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Nhập môn Lập trình"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/iv_course_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Course Icon -->
            <ImageView
                android:id="@+id/iv_course_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_purple"
                android:padding="12dp"
                android:src="@drawable/ic_calendar_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_course_title"
                tools:src="@drawable/ic_calendar_purple" 
                app:tint="@color/white"/>

    <!-- General Info Header -->
            <TextView
                android:id="@+id/tv_header_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Thông tin chung"
                android:textColor="@color/text_title"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_course_title" />

            <!-- Location Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_rounded_card_white"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintEnd_toStartOf="@id/card_lecturer"
                app:layout_constraintStart_toStartOf="@id/tv_header_general"
                app:layout_constraintTop_toBottomOf="@id/tv_header_general">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_orange_light"
                    android:backgroundTint="#FFF3E0"
                    android:padding="6dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FF9800"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Địa điểm"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_location" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Phòng 304"
                    android:textColor="@color/text_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_location"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingTop="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Lecturer Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_lecturer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_rounded_card_white"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/card_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_location"
                app:layout_constraintTop_toTopOf="@id/card_location">

                <ImageView
                    android:id="@+id/iv_lecturer"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_blue_light"
                    android:backgroundTint="#E3F2FD"
                    android:padding="6dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#2196F3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Giảng viên"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_lecturer" />

                <TextView
                    android:id="@+id/tv_lecturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="GV. Huyền"
                    android:textColor="@color/text_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_lecturer"
                     android:paddingTop="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Time Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_rounded_card_white"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_header_general"
                app:layout_constraintTop_toBottomOf="@id/card_location">

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_green_light"
                    android:backgroundTint="#E8F5E9"
                    android:padding="6dp"
                    android:src="@drawable/ic_time"
                    app:tint="#4CAF50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_label_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Thời gian"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/iv_time"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thứ Hai • 09:00 - 11:30"
                    android:textColor="@color/text_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_label_time"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Related Tasks Header -->
            <TextView
                android:id="@+id/tv_header_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nhiệm vụ liên quan"
                android:textColor="@color/text_title"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_header_general"
                app:layout_constraintTop_toBottomOf="@id/card_time" />



            <!-- Task List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_related_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_header_tasks" 
                tools:itemCount="1"
                tools:listitem="@layout/item_task_card"/>

            <TextView
                android:id="@+id/tv_no_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Không có nhiệm vụ nào"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_header_tasks" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="recycler_related_tasks,tv_no_tasks" />

            <!-- Learning Materials -->
             <TextView
                android:id="@+id/tv_header_materials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tài liệu học tập"
                android:textColor="@color/text_title"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_header_general"
                app:layout_constraintTop_toBottomOf="@id/barrier_tasks" />
            
            <ImageView
                android:id="@+id/btn_add_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_add_black_24dp"
                app:tint="@color/purple_700"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@id/tv_header_materials"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_header_materials" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_materials_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_card_white"
                android:padding="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_header_materials">
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Notes Section -->
            <TextView
                android:id="@+id/tv_header_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ghi chú"
                android:textColor="@color/text_title"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_header_general"
                app:layout_constraintTop_toBottomOf="@+id/layout_materials_list"
                android:layout_marginBottom="100dp"/> <!-- Space for content below -->

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_card_white"
                android:backgroundTint="#FFF9C4"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_header_notes">

                <TextView
                    android:id="@+id/tv_note_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Các nhóm dự án cần được chia vào thứ Sáu.\nNhớ kiểm tra các yêu cầu về API backend trước khi bắt đầu."
                    android:textColor="#5D4037"
                    android:lineSpacingExtra="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Chạm để sửa"
                    android:textColor="#8D6E63"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_note_content"/>
                    
                 <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_edit_white"
                    app:tint="#8D6E63"
                    app:layout_constraintStart_toEndOf="@+id/tv_note_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <!-- Spacer for bottom padding -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/tv_header_notes"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/layout_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btn_edit_course"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_primary"
            android:gravity="center"
            android:text="Chỉnh sửa"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_delete_course"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_secondary"
            android:backgroundTint="#FFEBEE"
            android:gravity="center"
            android:text="Xóa"
            android:textColor="#D32F2F"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
