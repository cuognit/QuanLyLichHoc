<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_rounded_card"
    android:padding="16dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_tag_exam_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag_white"
        android:backgroundTint="#E3F2FD"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Thi cuối kỳ"
        android:textColor="#1976D2"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_calendar_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_add_button"
        android:padding="4dp"
        android:src="@drawable/ic_calendar_purple"
        app:tint="#1976D2" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_exam_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Giải tích nâng cao"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/img_calendar_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_exam_type" />

    <TextView
        android:id="@+id/tv_exam_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Thứ Sáu, 24/10 • 08:00 Sáng"
        android:textColor="@color/text_subtitle"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_subject" />

    <!-- Countdown Section -->
    <LinearLayout
        android:id="@+id/container_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_countdown_block"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_date">

        <include layout="@layout/item_countdown_block" android:id="@+id/block_days" />
        <include layout="@layout/item_countdown_block" android:id="@+id/block_hours" />
        <include layout="@layout/item_countdown_block" android:id="@+id/block_minutes" />
        <include layout="@layout/item_countdown_block" android:id="@+id/block_seconds" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F3F4F6"
        app:layout_constraintTop_toBottomOf="@id/container_countdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            android:id="@+id/tv_room"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Phòng\n302"
            android:textColor="@color/text_title"
            android:textSize="12sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Số báo danh\n84"
            android:textColor="@color/text_title"
            android:textSize="12sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_exams" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
