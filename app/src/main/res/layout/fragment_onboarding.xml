<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding_gradient">

    <!-- Blurred Background Shapes -->
    <View
        android:id="@+id/blur_shape_1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/bg_blurred_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/blur_shape_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_blurred_circle"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Center Card / Illustration Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_illustration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Main Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_main"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_calendar_purple"
                    app:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_card"
                    android:backgroundTint="@color/white"
                    android:alpha="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_calendar" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_card"
                    android:backgroundTint="@color/white"
                    android:alpha="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_calendar"
                    android:layout_marginStart="0dp"
                    app:layout_goneMarginTop="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Floating Decorations -->
        <androidx.cardview.widget.CardView
            android:id="@+id/decor_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="-12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="24dp"
            app:layout_constraintStart_toStartOf="@id/card_main"
            app:layout_constraintTop_toTopOf="@id/card_main">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_language"
                app:tint="?attr/colorPrimary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/decor_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="-12dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="24dp"
            app:layout_constraintBottom_toBottomOf="@id/card_main"
            app:layout_constraintEnd_toEndOf="@id/card_main">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_exams"
                app:tint="@color/pastel_orange_text" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Content Container -->
    <LinearLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sắp xếp lịch học\nthông minh hơn"
            android:textColor="@color/text_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quản lý thời khóa biểu, lịch thi và bài tập chưa bao giờ dễ dàng đến thế. Hãy bắt đầu ngay!"
            android:textColor="@color/text_subtitle"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Bạn tên là gì nhỉ?"
            android:textColor="@color/text_title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_name"
            android:hint="Nhập tên của bạn..."
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_title"
            android:textColorHint="@color/gray_400"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="Bắt đầu ngay"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:enabled="false"
            app:cornerRadius="24dp"
            app:backgroundTint="@drawable/selector_button_onboarding"
            app:elevation="4dp" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="-42dp"
            android:visibility="gone"
            android:indeterminateTint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
