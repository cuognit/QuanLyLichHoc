<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textColor="@color/text_title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:src="@drawable/ic_profile"
                android:background="@drawable/bg_rounded_card"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" 
                android:layout_marginTop="56dp" />

            <!-- Edit Icon -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_add_button"
                android:backgroundTint="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/img_avatar"
                app:layout_constraintEnd_toEndOf="@id/img_avatar" />

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="@id/img_avatar"
                app:layout_constraintEnd_toEndOf="@id/img_avatar"
                app:layout_constraintStart_toStartOf="@null"
                app:layout_constraintTop_toTopOf="@null"
                android:translationX="-5dp"
                android:translationY="-5dp"
                />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nguyen Thế Thi"
                android:textColor="@color/text_title"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- App Section -->
        <TextView
            style="@style/SettingsSectionHeader"
            android:text="ỨNG DỤNG" />

        <LinearLayout
            style="@style/SettingsGroupCard">
             <include
                layout="@layout/item_setting_row"
                android:id="@+id/row_theme" />

            <View style="@style/SettingsDivider" />
            
             <include
                layout="@layout/item_setting_row"
                android:id="@+id/row_dark_mode" />

            <View style="@style/SettingsDivider" />

             <include
                layout="@layout/item_setting_row"
                android:id="@+id/row_language" />
        </LinearLayout>

        <!-- Data Section -->
        <TextView
            style="@style/SettingsSectionHeader"
            android:text="DỮ LIỆU" />

        <LinearLayout
            style="@style/SettingsGroupCard">
             <include
                layout="@layout/item_setting_row"
                android:id="@+id/row_backup" />
        </LinearLayout>

        <!-- Support Section -->
        <TextView
            style="@style/SettingsSectionHeader"
            android:text="HỖ TRỢ" />

        <LinearLayout
            style="@style/SettingsGroupCard">
             <include
                layout="@layout/item_setting_row"
                android:id="@+id/row_contact" />
            <View style="@style/SettingsDivider" />
             <include
                layout="@layout/item_setting_row"
                android:id="@+id/row_policy" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
