<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_chevron_left"
        app:tint="@color/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm môn học"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/text_title"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <View
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintTop_toBottomOf="@id/divider_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="16dp">

            <!-- Basic Info Header -->
            <TextView
                android:id="@+id/tv_header_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN CƠ BẢN"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subject Name Input -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_subject_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_field"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_header_basic">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên môn học"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_subject_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Ví dụ: Lập trình Web"
                    android:layout_marginTop="4dp"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_title"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Room Input -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_room"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@id/layout_lecturer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_subject_name">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_orange_light"
                    android:padding="8dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FF9800" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phòng"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/et_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="A2-304"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/text_title"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Lecturer Input -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_lecturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_room"
                app:layout_constraintTop_toBottomOf="@id/layout_subject_name">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_blue_light"
                    android:padding="8dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#2196F3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giảng viên"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/et_lecturer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Cô Lan"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_title"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <!-- Schedule Header -->
            <TextView
                android:id="@+id/tv_header_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="THỜI GIAN &amp; LỊCH"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_room" />

            <TextView
                android:id="@+id/tv_label_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Lặp lại vào thứ"
                android:textColor="@color/text_title"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_header_schedule" />

            <!-- Day Selector -->
            <LinearLayout
                android:id="@+id/layout_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="7"
                app:layout_constraintTop_toBottomOf="@id/tv_label_repeat">
                
                <!-- Helper method in Fragment will populate these or handle logic. 
                     For simplicity, I'll hardcode buttons but logic will handle selection. -->
                
                <TextView android:id="@+id/day_mon" style="@style/DayButtonStyle" android:text="T2" />
                <TextView android:id="@+id/day_tue" style="@style/DayButtonStyle" android:text="T3" />
                <TextView android:id="@+id/day_wed" style="@style/DayButtonStyle" android:text="T4" />
                <TextView android:id="@+id/day_thu" style="@style/DayButtonStyle" android:text="T5" />
                <TextView android:id="@+id/day_fri" style="@style/DayButtonStyle" android:text="T6" />
                <TextView android:id="@+id/day_sat" style="@style/DayButtonStyle" android:text="T7" />
                <TextView android:id="@+id/day_sun" style="@style/DayButtonStyle" android:text="CN" android:textColor="#F44336"/>

            </LinearLayout>

            <!-- Time Inputs -->
            <LinearLayout
                android:id="@+id/layout_time_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                app:layout_constraintTop_toBottomOf="@id/layout_days">

                <!-- Start Time -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/btn_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giờ bắt đầu"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />
                         <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07:00 SA"
                            android:textColor="@color/text_title"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                   
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/text_title"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- End Time -->
                 <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/btn_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                     android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giờ kết thúc"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />
                         <TextView
                             android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:30 SA"
                            android:textColor="@color/text_title"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                   
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/text_title"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <!-- Date Inputs -->
             <LinearLayout
                android:id="@+id/layout_date_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                app:layout_constraintTop_toBottomOf="@id/layout_time_inputs">

                <!-- Start Date -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/btn_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Từ ngày"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />
                         <TextView
                             android:id="@+id/tv_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_marginTop="2dp"
                            android:text="20/02/2026"
                            android:textColor="@color/text_title"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                   
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar_basic"
                        app:tint="@color/text_title"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- End Date -->
                 <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/btn_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                     android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đến ngày"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />
                         <TextView
                             android:id="@+id/tv_end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_marginTop="2dp"
                            android:text="17/02/2026"
                            android:textColor="@color/text_title"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                   
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar_basic"
                        app:tint="@color/text_title"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <!-- Color Picker -->
            <TextView
                android:id="@+id/tv_header_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="MÀU HIỂN THỊ"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_date_inputs" />

             <LinearLayout
                android:id="@+id/layout_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tv_header_color">

                 <!-- Red -->
                 <View
                     android:id="@+id/color_red"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:layout_marginEnd="16dp"
                     android:background="@drawable/circle_purple"
                     android:backgroundTint="#F44336"/>
                 
                 <!-- Orange -->
                  <View
                     android:id="@+id/color_orange"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:layout_marginEnd="16dp"
                     android:background="@drawable/circle_purple"
                     android:backgroundTint="#FF9800"/>

                 <!-- Yellow -->
                  <View
                     android:id="@+id/color_yellow"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:layout_marginEnd="16dp"
                     android:background="@drawable/circle_purple"
                     android:backgroundTint="#FFEB3B"/>

                 <!-- Green -->
                 <View
                     android:id="@+id/color_green"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:layout_marginEnd="16dp"
                     android:background="@drawable/circle_purple"
                     android:backgroundTint="#4CAF50"/>

                 <!-- Blue -->
                  <View
                     android:id="@+id/color_blue"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:layout_marginEnd="16dp"
                     android:background="@drawable/circle_purple"
                     android:backgroundTint="#4285F4"/>
                  
                  <!-- Purple -->
                   <View
                     android:id="@+id/color_purple"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:layout_marginEnd="16dp"
                     android:background="@drawable/circle_purple"
                     android:backgroundTint="#9C27B0"/>
                   
             </LinearLayout>

             <!-- Note Input -->
             <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_input_field"
                android:hint="Ghi chú thêm (bài tập, nhắc nhở...)"
                android:padding="16dp"
                android:gravity="top"
                android:minLines="3"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_edit_white"
                android:drawableTint="#BDBDBD"
                android:drawablePadding="12dp"
                app:layout_constraintTop_toBottomOf="@id/layout_colors"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Save Button -->
    <TextView
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_primary"
        android:gravity="center"
        android:minWidth="200dp"
        android:paddingHorizontal="32dp"
        android:text="Lưu lịch học"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_check_circle"
        android:drawablePadding="8dp"
        app:drawableTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
