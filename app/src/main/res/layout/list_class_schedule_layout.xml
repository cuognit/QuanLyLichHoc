<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon lịch -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch học"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A2E"/>

        <!-- Search icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginEnd="12dp"/>

        <!-- Bell icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_marginEnd="12dp"/>

        <!-- Avatar -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="#6A3DE8"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- ===== CALENDAR HEADER (Tháng 10, 2023) ===== -->
    <LinearLayout
        android:id="@+id/calendarHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tháng 10, 2023"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1A1A2E"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_media_rew"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_media_ff"/>
    </LinearLayout>

    <!-- ===== WEEK ROW (T2~CN) ===== -->
    <LinearLayout
        android:id="@+id/weekRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/calendarHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- T2 - 21 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="T2" android:textSize="11sp" android:textColor="#999"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="21" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>

        <!-- T3 - 22 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="T3" android:textSize="11sp" android:textColor="#999"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="22" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>

        <!-- T4 - 23 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="T4" android:textSize="11sp" android:textColor="#999"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="23" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>

        <!-- T5 - 24 (SELECTED) -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="T5" android:textSize="11sp" android:textColor="#6A3DE8"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="24"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/circle_purple"/>
        </LinearLayout>

        <!-- T6 - 25 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="T6" android:textSize="11sp" android:textColor="#999"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="25" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>

        <!-- T7 - 26 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="T7" android:textSize="11sp" android:textColor="#999"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="26" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>

        <!-- CN - 27 -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="CN" android:textSize="11sp" android:textColor="#999"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="27" android:textSize="14sp" android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== HÔM NAY label + số lớp ===== -->
    <LinearLayout
        android:id="@+id/todayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/weekRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#1A1A2E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ Hai, 24 tháng 10"
                android:textSize="12sp"
                android:textColor="#999"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 lớp học"
            android:textSize="12sp"
            android:textColor="#6A3DE8"/>
    </LinearLayout>

    <!-- ===== DANH SÁCH MÔN HỌC (ScrollView) ===== -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/todayRow"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- ===== CARD 1: Toán Cao Cấp (tím) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Cột giờ -->
                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="4dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="07:00" android:textSize="11sp" android:textColor="#888"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="08:45" android:textSize="11sp" android:textColor="#aaa"/>
                </LinearLayout>

                <!-- Đường kẻ dọc màu tím -->
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#6A3DE8"
                    android:layout_marginEnd="10dp"/>

                <!-- Card nội dung -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#EDE7FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <!-- Hàng tiêu đề + badge -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Toán Cao Cấp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#4A1DB8"/>

                            <!-- Badge ĐANG DIỄN RA -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ĐANG DIỄN RA"
                                android:textSize="9sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:background="#6A3DE8"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"/>
                        </LinearLayout>

                        <!-- Phòng -->
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="6dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_compass"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Phòng A301 - Tòa nhà A"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                        <!-- GV -->
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="2dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_myplaces"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="ThS. Nguyễn Văn A"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ===== CARD 2: Triết học Mác - Lênin (xanh) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp">

                <!-- Cột giờ -->
                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="4dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="09:00" android:textSize="11sp" android:textColor="#888"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="11:30" android:textSize="11sp" android:textColor="#aaa"/>
                </LinearLayout>

                <!-- Đường kẻ dọc xanh dương -->
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#1E88E5"
                    android:layout_marginEnd="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Triết học Mác - Lênin"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#1565C0"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="6dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_compass"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Giảng đường B"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="2dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Ca 2 (Sáng)"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ===== NGHỈ TRƯA DIVIDER ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <View android:layout_width="0dp" android:layout_height="1dp"
                    android:layout_weight="1" android:background="#E0E0E0"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  NGHỈ TRƯA  "
                    android:textSize="11sp" android:textColor="#BDBDBD" android:textStyle="bold"/>
                <View android:layout_width="0dp" android:layout_height="1dp"
                    android:layout_weight="1" android:background="#E0E0E0"/>
            </LinearLayout>

            <!-- ===== CARD 3: Lập trình Web (xanh lá) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="4dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="13:00" android:textSize="11sp" android:textColor="#888"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="15:00" android:textSize="11sp" android:textColor="#aaa"/>
                </LinearLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#2E7D32"
                    android:layout_marginEnd="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lập trình Web"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#1B5E20"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="6dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_compass"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Lab 4 - Tầng 2"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="2dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_edit"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Thực hành"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ===== CARD 4: Anh văn chuyên ngành (cam) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingTop="4dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="18:00" android:textSize="11sp" android:textColor="#888"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="20:30" android:textSize="11sp" android:textColor="#aaa"/>
                </LinearLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="#E65100"
                    android:layout_marginEnd="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anh văn chuyên ngành"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#BF360C"/>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:layout_marginTop="6dp">
                            <ImageView android:layout_width="14dp" android:layout_height="14dp"
                                android:src="@android:drawable/ic_menu_compass"
                                android:layout_marginEnd="4dp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Phòng C202 - Online"
                                android:textSize="13sp" android:textColor="#555"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ===== FAB ===== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#6A3DE8"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== BOTTOM NAVIGATION ===== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@drawable/bottom_nav_selector"
        app:itemTextColor="@drawable/bottom_nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>